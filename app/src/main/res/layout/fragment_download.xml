<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:background="@drawable/download_pro"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/icons"
            android:textSize="23sp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="正在下载的文件："/>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
            <!--标题，网址，注释，分类-->

            <ImageView
                android:id="@+id/iv_filepic_down"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_web_2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:scaleType="center"
                android:layout_alignTop="@+id/tv_fav_title"
                android:layout_alignBottom="@+id/tv_down_size_down"
                />
            <TextView
                android:layout_toRightOf="@+id/iv_filepic_down"
                android:id="@+id/tv_down_filename_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/icons"
                android:text="文件名"/>
            <ProgressBar
                android:id="@+id/pb_download"
                android:layout_width="match_parent"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="10"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_height="10dp"
                android:layout_below="@+id/tv_down_filename_down"
                android:layout_toRightOf="@+id/iv_filepic_down"/>
            <TextView
                android:id="@+id/tv_down_size_down"
                android:layout_alignLeft="@+id/tv_down_filename_down"
                android:layout_below="@+id/pb_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/iconsSecondary"
                android:text="文件大小"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/icons"
        android:textSize="23sp"
        android:padding="10dp"
        android:background="@drawable/download_pro"

        android:text="已经下载的文件："/>
    <ListView

        android:scrollbars="none"
        android:padding="10dp"
        android:background="@drawable/material_red"
        android:divider="#00F44336"
        android:dividerHeight="14dp"
        android:id="@+id/lv_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </ListView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/bt_clear"
            android:layout_weight="1"
            android:src="@drawable/clear"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_edit_dl"
            android:layout_weight="1"
            android:src="@drawable/edit"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>