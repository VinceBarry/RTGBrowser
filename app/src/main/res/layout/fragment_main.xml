<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="top"
    android:padding="5dp"
    android:background="@color/colorPrimary"
    >
    <ImageView
        android:id="@+id/iv_searchorlinkto"
        android:background="@drawable/bt_common"
        android:clickable="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_web"/>
    <LinearLayout
        android:id="@+id/ll_webline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_webline"
        android:layout_weight="1">
        <EditText
            android:id="@+id/et_input"
            android:background="@drawable/et_webline"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="17sp"
            android:textColorHint="@color/icons"
            android:textColor="@color/textSecondary"
            android:hint="请输入网址链接"/>
        <ImageView
            android:id="@+id/iv_qr"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_qr"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_delete"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_linkto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:background="@drawable/bt_common"
        android:paddingRight="10dp"
        android:textSize="17sp"
        android:textColor="@color/icons"
        android:text="转至"/>
</LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="5dp">
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pr_ld"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#00000000"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <WebView
            android:id="@+id/wv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/savebar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/tb_savebar">
        <ImageView
            android:id="@+id/bt_screenshot"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@drawable/bt_common_white"
            android:src="@drawable/ic_screenshot"
            />
        <ImageView
            android:layout_width="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/divider"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/bt_textsave"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@drawable/bt_common_white"
            android:src="@drawable/ic_text"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_toolbar1"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/bt_back"
            android:layout_weight="1"
            android:src="@drawable/left"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/bt_stop"
            android:layout_weight="1"
            android:src="@drawable/ic_stop"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_forward"
            android:layout_weight="1"
            android:src="@drawable/right"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_refresh"
            android:scaleType="center"
            android:layout_weight="1"
            android:src="@drawable/ic_refresh"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_mainpage"
            android:layout_weight="1"
            android:src="@drawable/ic_mainpage"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_switch1"
            android:layout_weight="1"
            android:src="@drawable/ic_switch1"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_toolbar2"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/bt_page"
            android:layout_weight="1"
            android:src="@drawable/page"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_save"
            android:layout_weight="1"
            android:src="@drawable/ic_save"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_share"
            android:layout_weight="1"
            android:src="@drawable/share"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_favorite"
            android:layout_weight="1"
            android:src="@drawable/ic_favorite_bar"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_switch2"
            android:layout_weight="1"
            android:src="@drawable/ic_switch2"
            android:background="@drawable/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
    <FrameLayout
        android:id="@+id/fl_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <!--To input or output some information.-->
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_dialog"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="#AA000000"
        android:padding="20dp"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="10dp"
                android:padding="8dp"
                android:background="@drawable/affair_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/et_dig_title"
                    android:background="@drawable/et_webline"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:lines="1"
                    android:textColorHint="@color/textSecondary"
                    android:hint="网址标题（默认为URL）"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B6B6B6"/>
                <EditText
                    android:id="@+id/et_dig_context"
                    android:background="@drawable/et_webline"
                    android:scrollbars="vertical"
                    android:gravity="start"
                    android:maxLines="10"
                    android:textColorHint="@color/textSecondary"
                    android:paddingTop="7dp"
                    android:textColor="#212121"
                    android:paddingBottom="7dp"
                    android:paddingLeft="7dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:textSize="17sp"
                    android:hint="网址大纲"/>
                <EditText
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/et_dig_tags"
                    android:background="@drawable/tv_tags"
                    android:scrollbars="vertical"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textColorHint="@color/icons"
                    android:paddingTop="7dp"
                    android:textColor="@color/icons"
                    android:paddingBottom="7dp"
                    android:paddingLeft="7dp"

                    android:hint="分类"
                    android:maxLength="15"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/bt_dig_save"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:textColor="@color/icons"
                        android:background="@drawable/bt_common_se"
                        android:layout_marginRight="5dp"
                        android:text="保存"
                        />
                    <TextView
                        android:id="@+id/bt_dig_cancel"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:textColor="@color/icons"
                        android:background="@drawable/bt_common_se"
                        android:text="取消"
                        />
                </LinearLayout>
            </LinearLayout>

    </FrameLayout>
</FrameLayout>
